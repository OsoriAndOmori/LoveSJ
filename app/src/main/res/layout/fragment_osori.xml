<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".activity.OsoriActivity">

	<android.support.v4.view.ViewPager
		android:id="@+id/view_page"
		android:layout_width="match_parent"
		android:layout_height="match_parent"/>
	<LinearLayout
		android:id="@+id/wrap_linear_layout"
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:gravity="center"
		android:orientation="vertical"
		android:background="@color/lightPink"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<ImageView
			android:layout_width="100dp"
			android:layout_height="60dp"
			app:srcCompat="@drawable/love"/>

		<ImageView
			android:id="@+id/coupleImage"
			android:layout_width="match_parent"
			android:layout_height="412dp"
			app:srcCompat="@drawable/osori_couple"/>

		<TextView
			android:id="@+id/title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Kh Loves Sj"/>
		<TextView
			android:id="@+id/love_dday"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="연애 Dday!"/>
		<TextView
			android:id="@+id/wedding_dday"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="결혼 Dday!"/>
	</LinearLayout>
</android.support.constraint.ConstraintLayout>